{% extends 'admin/dashboard.html' %}
{% load staticfiles %}
{% load template_tag %}

{% block user_management %}
    {% if messages %}
        {% for message in messages %}
            <div class="alert {% if message.tags == 'error' %}alert-danger{% elif message.tags == 'success' %}alert-success{% endif %} m_tb_10"
                 id="alert">{{ message }}</div>
        {% endfor %}
    {% endif %}

    <div class="p_10" style="background: rgba(0,0,0,0.3);">
        <div class="row m_0">
            <h4 class="font_weight_600 text_white m_t_0 cursor_pointers" data-toggle="collapse"
                data-target="#select_filterss"><i class="fa fa-hand-o-right fa-fw"></i> Filter Criterion <span
                    class="caret"></span></h4>
            <div class="collapse" id="select_filterss">
                <form role="form" method="get" action="{% url 'rehab-listing' %}">
                    <button type="submit" class="btn btn-info btn-sm">Apply</button>
                    <a href="{% url 'rehab-listing' %}" class="btn btn-warning btn-sm">Reset</a>
                    <div class="row m_t_10">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="hidden" value="rehab_filter" name="x">
                                <select class="chosen-select" name="state_id">

                                    <option value="">--Select State--</option>
                                    {% for stateone in state_data_obj %}
                                        {% if state_filter == stateone.id %}
                                            <option value="{{ stateone.id }}" selected>{{ stateone.name | capfirst }}</option>
                                        {% else %}
                                            <option value="{{ stateone.id }}">{{ stateone.name | capfirst}}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select class="chosen-select" name="city_id">

                                    <option value="">---Select City ---</option>
                                    {% for cityone in city_obj %}
                                        {% if city_filter == cityone.id %}
                                            <option value="{{ cityone.id }}" selected>{{ cityone.name | capfirst}}</option>
                                        {% else %}
                                            <option value="{{ cityone.id }}">{{ cityone.name | capfirst}}</option>
                                        {% endif %}
                                    {% endfor %}

                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select class="chosen-select" name="locality_id">

                                    <option value="">--Select Location---</option>
                                    {% for localityone in locality_obj %}
                                        {% if locality_filter == localityone.id %}
                                            <option value="{{ localityone.id }}"
                                                    selected>{{ localityone.name | capfirst}}</option>
                                        {% else %}
                                            <option value="{{ localityone.id }}">{{ localityone.name | capfirst}}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-sm-4 p_l_0">
                <div class="input-group p_b_10">
                    <input type="text" placeholder="Search |" class="form-control" id="search" autofocus="autofocus">
                    <span class="input-group-btn"> <button class="btn btn-default"
                                                           onclick="SearchRehab({{ request.user.id }})"> Search</button></span>
                </div>
            </div>
        {% if request.user|can_view_caller %}
            <div class="col-sm-8"><p class="pull-right"><a class="btn btn-info" href="{% url 'add_rehab' %}"><i
                    class="fa fa-flask fa-fw"></i> Add New Rehab</a></p></div>
        {% endif  %}
            <input type="hidden" value="rehab" id="xx" name ="yy">
            {% include 'publisher/markascomplete.html' %}
        </div>
        <br>
        {% block table %}
            <div class="table-responsive table_modify_for_all">
                <table class="table table-bordered">
                    <thead>
                    <tr><th><input id="checkAll" type="checkbox"/></th>
                        <th>Sr No</th>
                        <th>Rehab Name</th>
                        <th>City</th>
                        <th>Location</th>
                        <th>Stage</th>
                        <th>Current User</th>
                        <th>Free Text</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in rehab %}
                        <tr><td><input type="checkbox" value="{{ i.id }}"></td>
                            <td>{{ forloop.counter }}</td>
                            <td>{{ i.clinic_name | capfirst }}</td>
                            <td>{{ i.city.name | capfirst }}</td>
                            <td>{{ i.locality.name | capfirst }}</td>

                            <td>{{ i.stage.stage_name | capfirst }}</td>

                            <td>{{ i.current_user.username | capfirst }}</td>
                            <td>{{ i.free_text | capfirst }}</td>
                            <td>{{ i.created_at }}</td>
                            <td>{{ i.updatedAt }}</td>
                            {% if i.stage_id != 5 %}<td>
                                <a class="btn btn-default btn-sm p_0" href="{% url 'time-schedule-rehab' i.id %}"><i class="fa fa-clock-o fa-fw text_333"></i></a>
                                <a class="text_white" href="{% url 'rehab-listing-edit' i.id %}?tab=1"><i class="fa fa-edit"></i></a></td>
                            {% else %}
                            <td></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
                {% if rehab %}
                    <div class="text-right">
                        <ul class="pagination">
                            {% if rehab.has_previous %}
                                <li class="prev"><a href="?page={{ rehab.previous_page_number }}">Prev</a></li>
                            {% endif %}
                            <li><a>Page {{ rehab.number }} of {{ rehab.paginator.num_pages }}</a></li>
                            {% if rehab.has_next %}
                                <li class="next"><a href="?page={{ rehab.next_page_number }}">Next</a></li>
                            {% endif %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        {% endblock %}
    </div>


    <script>
        $('#alert').fadeIn().delay(2000).fadeOut('slow');
        var elem = document.getElementById("search");
        elem.onkeyup = function (e) {
            if (e.keyCode == 13) {
                SearchRehab({{ request.user.id }})
            }
        }
    </script>
{% endblock %}