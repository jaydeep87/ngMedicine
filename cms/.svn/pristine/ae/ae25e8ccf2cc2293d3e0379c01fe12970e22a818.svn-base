{% extends 'admin/dashboard.html' %}
{% load staticfiles %}
{% load template_tag %}

{% block user_management %}
    {% if messages %}
        {% for message in messages %}
            <div class="alert {% if message.tags == 'error' %}alert-danger{% elif message.tags == 'success' %}alert-success{% endif %} m_tb_10"
                 id="alert">{{ message }}</div>
        {% endfor %}
    {% endif %}
    <div class="well well-sm text_logo font_weight_600"><a href="{% url 'service_plans_masters' %}" class="btn btn-info btn-sm pull-right"
                       style="margin-top: -5px;">Go Back</a></div>

        {% block table %}
           <p class="text-right"><a href="{% url 'add_plan_sub_component' %}" class="btn btn-info"><i class="fa fa-user fa-fw"></i> Add New Plan Sub Component</a></p>
            <div class="table-responsive table_modify_for_all">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Sr No</th>
                        <th>Plan Sub Component</th>
                        <th>Plan Component</th>
                        <th>Plan Details</th>
                        <th>Amount</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in sub_component %}

                        <tr>
                            <td>{{ forloop.counter }}</td>
                            <td>{{ i.name | capfirst }}</td>
                            <td>{{ i.plan_component.name | capfirst }}</td>
                            <td>{{ i.plan_detail.name | capfirst }}</td>
                            <td>{{ i.amount }}</td>
                            <td>{{ i.createdAt }}</td>
                            <td>{{ i.updatedAt }}</td>
                            <td><a class="text_white" href="{% url 'edit_plan_sub_component' i.id %}"><i class="fa fa-edit"></i></a>
                            <span class="p_lr_10">|</span> {% if i.delete == False %}<a href="{% url 'any-master-object-deactivate' object_id=i.id object_type=69 %}" class="text_white">
                            <i class="fa fa-close"></i></a> {% else %}<a href="{% url 'any-master-object-activate' object_id=i.id object_type=69 %}" class="text_white">
                            <i class="fa fa-check-square-o"></i></a>{% endif %}</td>
                        </tr>

                    {% endfor %}
                    </tbody>

                </table>
            </div>
        {% endblock %}
    </div>

{% endblock %}