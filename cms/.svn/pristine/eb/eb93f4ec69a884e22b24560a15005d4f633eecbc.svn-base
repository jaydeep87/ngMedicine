{% extends 'admin/dashboard.html' %}
{% load staticfiles %}
{% load template_tag %}

{% block user_management %}
    <div class="p_10" style="background: rgba(0,0,0,0.3);">
        <div class="row m_0">
            <div class="col-sm-12 m_b_10 p_l_0">
                <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#filters"><i
                        class="fa fa-filter fa-fw"></i> Apply Filters
                </button>
            </div>

            <div class="collapse col-md-12" id="filters">
                <div class="thumbnail p_t_15 row">
                    <div class="col-sm-4">
                        <div class="form-group"><select class="form-control" id="stage_data">
                            <option>----Select Stage---</option>
                            {% for c in stage_data %}
                                <option value="{{ c.id }}">{{ c.stage_name }}</option>

                            {% endfor %}
                        </select></div>

                    </div>
                    <div class="col-md-8">
                        <button type="button" class="btn btn-info" onclick="SearchSymptomsAdminStage()">Search</button>
                    </div>
                    {#<form role="form">#}
                    {#<label class="radio-inline">#}
                    {#    #}
                    {#    #}
                    {#    #}
                    {#    <input type="checkbox" name="caller_user">Caller User Type</label>#}
                    {#<label class="radio-inline"><input type="checkbox" name="reviewer_user"> Reviewer User Type</label>#}
                    {#<p class="m_t_15">#}
                    {#<button type="reset" class="btn btn-danger btn-sm">Reset</button>#}
                    {#<button type="button" class="btn btn-info btn-sm">Apply</button>#}
                    {#</p>#}
                    {#</form>#}

                </div>

            </div>
            {% if request.user|can_view_admin %}
                <div class="row m_b_10">
                    <div class="col-sm-4">
                        <div class="input-group">
                            <input type="text" placeholder="Search |" class="form-control" id="search" autofocus="autofocus">
                            <span class="input-group-btn"> <button class="btn btn-default"
                                                                   onclick="SearchSymptomsOnByStageByUser()"> Search</button></span>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>


        <div class="table-responsive table_modify_for_all">
            <table class="table table-bordered">
                <thead>
                <tr><th>S. No./th>
                    <th>Topic title</th>
                    <th>Tag String</th>
                    <th>free_text</th>
                    <th>Current User</th>
                    <th>Stage</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th >Action</th>
                </tr>
                </thead>
                <tbody>
                {% if symptoms_all_data %}
                    {% for i in symptoms_all_data %}
                        <tr>
                        <td>{{ forloop.counter }}</td>
                        <td>{{ i.topic_title | capfirst }}</td>
                        <td>{{ i.tag_string | capfirst }}</td>
                        <td>{{ i.free_text | capfirst }}</td>
                        <td>{{ i.current_user.username | capfirst }}</td>
                        <td>{{ i.stage.stage_name | capfirst }}</td>
                        <td>{{ i.createdAt }}</td>
                        <td>{{ i.updatedAt }}</td>
                        <td>
                            <a class="text_white" href="{% url 'symptoms-listing-edit' i.id %} "><i
                                    class="fa fa-edit"></i></a><span class="p_lr_10">|</span>{% if i.is_disable == False %}<a href="{% url 'any-master-object-deactivate' object_id=i.id object_type=23 %}" class="text_white"><i class="fa fa-close"></i></a>
                            {% else %}<a href="{% url 'any-master-object-activate' object_id=i.id object_type=23 %}" class="text_white"><i class="fa fa-check-square-o"></i></a>{% endif %}</a>

                            <span class="p_lr_10"></span>
                             <a class="btn btn-danger btn-sm p_0"
                               href="{% url 'delete_symptoms' i.id %}"><i
                                    class="fa fa-trash-o text-danger fa-fw text_white"></i></a>

                        </td>
                {% endfor %}
                </tr>
                </tbody>
            </table>
            {% endif %}
            {% if symptoms_all_data %}
                <div class="text-right">
                    <ul class="pagination">
                        {% if symptoms_all_data.has_previous %}
                            <li class="prev"><a href="?page={{ symptoms_all_data.previous_page_number }}{% if stage_no %}&stage_id={{stage_no}}{% endif %}">Prev</a></li>
                        {% endif %}
                        <li><a>Page {{ symptoms_all_data.number }} of {{ symptoms_all_data.paginator.num_pages }}</a></li>
                        {% if symptoms_all_data.has_next %}
                            <li class="next"><a href="?page={{ symptoms_all_data.next_page_number }}{% if stage_no %}&stage_id={{stage_no}}{% endif %}">Next</a></li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
<script>
        $('#alert').fadeIn().delay(2000).fadeOut('slow');
        var elem = document.getElementById("search");
        elem.onkeyup = function(e){
        if(e.keyCode == 13){
           SearchSymptomsOnByStageByUser()
        }
        }
    </script>

{% endblock %}