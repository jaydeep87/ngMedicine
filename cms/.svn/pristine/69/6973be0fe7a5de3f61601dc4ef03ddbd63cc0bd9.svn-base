                    <th>free_text</th>
                    <th>Stage</th>
                     <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                    <th>Action</th>
            </tr>
         </thead>
         <tbody>
            {% for i in drug %}
            <tr>
               <td><input type="checkbox" value="{{ i.id }}"></td>
               <td>{{ forloop.counter }}</td>
               <td>{{ i.name | capfirst }}</td>
                        <td>{{ i.generic_name | capfirst }}</td>
                        <td>{{ i.free_text | capfirst }}</td>
                        <td>{{ i.stage.stage_name | capfirst }}</td>
                        <td>{{ i.createdAt }}</td>
